<!-- activity_main.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Círculo de fondo para la brújula -->
    <View
        android:id="@+id/compass_background"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:background="@drawable/circle_background" />

    <!-- Texto de título superior -->
    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="30dp"
        android:text="Digital Compass"
        android:textSize="28sp"
        android:textColor="?attr/colorOnSurface" />

    <!-- Imagen de la brújula -->
    <ImageView
        android:id="@+id/compass_image"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_centerInParent="true"
        android:src="@drawable/compass"
        android:rotation="0"
        app:tint="?attr/colorOnSurface" />

    <!-- Texto de información en la parte inferior -->
    <TextView
        android:id="@+id/info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/compass_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Point towards your destination"
        android:textSize="25sp"
        android:textColor="?attr/colorOnSurface"
        android:fontFamily="sans-serif" />

    <!-- Texto para mostrar la distancia -->
    <TextView
        android:id="@+id/distance_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Distance: Calculating..."
        android:textSize="18sp"
        android:textColor="?attr/colorOnSurface"
        android:fontFamily="sans-serif" />

    <!-- Texto para mostrar la ciudad más cercana -->
    <TextView
        android:id="@+id/closest_city_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/distance_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="City: N/A"
        android:textSize="18sp"
        android:textColor="?attr/colorOnSurface"
        android:fontFamily="sans-serif" />

    <!-- Texto para mostrar el shelter más cercano -->
    <TextView
        android:id="@+id/closest_shelter_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/closest_city_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Shelter name: N/A"
        android:textSize="18sp"
        android:textColor="?attr/colorOnSurface"
        android:fontFamily="sans-serif" />

</RelativeLayout>
