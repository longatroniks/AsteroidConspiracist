<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="?attr/android:windowBackground"
        tools:context=".activity.CompassActivity">

        <!-- Compass Section inside MaterialCardView -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/compassCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:cardElevation="8dp"
            app:cardCornerRadius="16dp"
            app:strokeColor="?attr/colorPrimary"
            app:strokeWidth="2dp"
            app:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:padding="16dp">

                <!-- Compass Image -->
                <ImageView
                    android:id="@+id/compass_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/compass"
                    android:contentDescription="Compass"
                    android:rotation="0"
                    android:scaleType="centerInside"
                    app:tint="?attr/colorSecondary"/>

                <!-- Direction Indicator -->
                <TextView
                    android:id="@+id/direction_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="N"
                    android:textSize="48sp"
                    android:textColor="?attr/colorPrimary"
                    android:textStyle="bold"
                    android:fontFamily="monospace" />
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Info Section inside MaterialCardView -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/infoCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:cardElevation="8dp"
            app:cardCornerRadius="16dp"
            app:strokeColor="?attr/colorSecondary"
            app:strokeWidth="2dp"
            app:layout_constraintTop_toBottomOf="@id/compassCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/info_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Align the needle to the target"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="18sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/distance_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp"
                    android:text="Distance: Calculating..."
                    android:textColor="?attr/colorPrimary"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/closest_city_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp"
                    android:text="City: N/A"
                    android:textColor="?attr/colorSecondary"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/closest_shelter_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp"
                    android:text="Shelter: N/A"
                    android:textColor="?attr/colorTertiary"
                    android:textSize="18sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

