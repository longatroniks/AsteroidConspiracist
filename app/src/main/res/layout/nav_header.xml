<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginTop="16dp"
    android:gravity="start"
    app:cardBackgroundColor="?attr/colorSurface">

    <!-- Logo/Image -->
    <ImageView
        android:id="@+id/nav_header_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_launcher_foreground"
        android:contentDescription="@string/app_name"
        android:layout_gravity="start" />

    <!-- App Name -->
    <TextView
        android:id="@+id/nav_header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Asteroid Conspiracist"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        android:ellipsize="end"
        android:singleLine="true" />

    <!-- Tagline or additional description -->
    <TextView
        android:id="@+id/nav_header_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="You are not dying on our watch"
        android:textSize="14sp"
        android:textStyle="italic"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:ellipsize="end"
        android:singleLine="true" />
</LinearLayout>
