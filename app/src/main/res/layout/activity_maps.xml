<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/android:windowBackground">

    <!-- Observation Subscription Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/observationSubscriptionCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="?attr/colorSurface"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Toggle Button for Observations Subscription -->
            <Button
                android:id="@+id/btnToggleObservations"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Subscribe"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="?attr/colorOnPrimary"
                android:backgroundTint="?attr/colorPrimary"
                app:cornerRadius="16dp"
                android:layout_marginBottom="12dp" />

            <!-- ViewPager2 to Swipe Through Observations -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/observationViewPager"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Map Fragment Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mapCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:cardBackgroundColor="?attr/colorSurface"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/observationSubscriptionCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Horizontal layout to align the title and fullscreen button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/mapHeading"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Observation Map"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface" />

                <!-- Full-Screen Toggle Icon Button -->
                <ImageButton
                    android:id="@+id/btnToggleFullScreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Full Screen"
                    android:src="@drawable/ic_compass"
                    android:background="?attr/selectableItemBackgroundBorderless" />
            </LinearLayout>

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


    <!-- Full-Screen Map Overlay with Higher Elevation -->
    <FrameLayout
        android:id="@+id/fullScreenMapOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:elevation="10dp">

        <fragment
            android:id="@+id/fullScreenMap"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Exit Full Screen Icon Button -->
        <ImageButton
            android:id="@+id/btnExitFullScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_margin="16dp"
            android:contentDescription="Exit Full Screen"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
