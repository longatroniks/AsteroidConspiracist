<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorOnSecondaryContainer"
        android:orientation="vertical" />

    <ImageView
        android:id="@+id/asteroid_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="170dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="Asteroid"
        android:src="@drawable/asteroid_image"
        android:scaleType="centerInside"
        android:elevation="5dp" />

    <TextView
        android:id="@+id/arrow_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="50dp"
        android:text="Asteroid\nConspiracist\n>"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:lineHeight="50dp"
        android:gravity="left"
        />

</RelativeLayout>
